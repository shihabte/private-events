<h1> Name: <%= @user.name %> </h1>
<h1> Email: <%= @user.email %> </h1>
<%if current_user==@user%>
  <h3><%= link_to "Edit", edit_user_registration_path(current_user)%> Your Profile</h3>
<%end%>
<h2>Created Events:</h2>
<ul>
  <% @user.created_events.each do |event| %>
    <li><%= link_to event.title, event_path(event)%><br>date: <%= event.event_date%><br><%=event.event_location%>
    </li>
  <% end %>
</ul>
<%if user_signed_in?%>
  <p><%= link_to "Create New Event", new_event_path%></p>
<%end%>

<h2>Upcoming Events:</h2>
<ul>
  <% @upcoming_events.each do |event| %>
    <li><%= link_to event.title, event_path(event)%><br>date: <%= event.event_date%><br><%=event.event_location%>
    </li>
  <% end %>
</ul>

<h2>Previously Attended Events:</h2>
<ul>
  <% @previous_events.each do |event| %>
    <li><%= link_to event.title, event_path(event)%><br>date: <%= event.event_date%><br><%=event.event_location%>
    </li>
  <% end %>
</ul>
