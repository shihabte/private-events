<%= form_with model: event do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title , :value => event.title%>
  </div>

  <div>
    <%= form.label :event_date %><br>
    <%= form.date_field :event_date , :value => event.event_date%>
  </div>

  <div>
    <%= form.label :event_location %><br>
    <%= form.text_field :event_location, :value => event.event_location%><br>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div>
    <%= form.submit %>
  </div>
<% end %>
